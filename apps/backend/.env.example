# Backend Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/placement_prep
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/placement_prep

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-70b-8192

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Code Execution
CODE_EXECUTION_TIMEOUT=30
CODE_EXECUTION_MEMORY_LIMIT=128m

# ML Models
WHISPER_MODEL=base
SPACY_MODEL=en_core_web_sm